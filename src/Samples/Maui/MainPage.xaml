<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dotvvm="clr-namespace:DotVVM.Framework.Hosting.Maui.Controls;assembly=DotVVM.Framework.Hosting.Maui"
             x:Class="DotVVM.Samples.BasicSamples.Maui.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0">
            <Label Text="Route" />
            <Label Text="{Binding RouteName}" />
        </HorizontalStackLayout>

        <dotvvm:DotvvmWebView x:Name="DotvvmPage" 
                              RouteName="{Binding RouteName}" 
                              Grid.Row="1" />
    </Grid>

</ContentPage>
